%section#blog.grey
  .container
    .row
      %aside.col-sm-4.col-sm-push-8
        .widget.search
          %form{:role => "form"}
            .input-group
              %input.form-control{:autocomplete => "off", :placeholder => "Search", :type => "text"}/
              %span.input-group-btn
                %button.btn.btn-danger{:type => "button"}
                  = icon('search')
        .widget.ads
          .row
            - @banners.each do |banner|
              = link_to(banner.link, class: 'col-sm-12') do
                = image_tag(banner.image.url(:large), class: 'img-responsive img-rounded')

        .widget.categories
          %h3 Filtrar por CategorÃ­as
          .row
            .col-sm-6
              %ul.arrow
                %li
                  %a{:href => "#"} Development
                %li
                  %a{:href => "#"} Design
                %li
                  %a{:href => "#"} Updates
                %li
                  %a{:href => "#"} Tutorial
                %li
                  %a{:href => "#"} News
            .col-sm-6
              %ul.arrow
                %li
                  %a{:href => "#"} Joomla
                %li
                  %a{:href => "#"} Wordpress
                %li
                  %a{:href => "#"} Drupal
                %li
                  %a{:href => "#"} Magento
                %li
                  %a{:href => "#"} Bootstrap

      .col-sm-8.col-sm-pull-4
        .blog
          .blog-item
            - if @news.images.empty?
              = image_tag(image.file.url(:large), class: 'img-responsive img-blog')
            - else
              - @news.images.each do |image|
                = image_tag(image.file.url(:large), class: 'img-responsive img-blog')
            .blog-content
              %h3
                #{@news.title}
              .entry-meta
                - if @news.category
                  %span
                    %i.icon-folder-close
                    %a{:href => "#"}
                      #{@news.category.name}
                %span
                  %i.icon-calendar
                  #{@news.date.to_date.to_formatted_s(:long)}
              %p.lead
                #{@news.subtitle}
              %p
                #{simple_format(@news.info)}

              